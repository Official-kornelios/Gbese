{
    "git": {
      "tagName": "v${version}",
      "changelog": "auto-changelog --stdout --commit-limit false -u --template ./changelog.hbs",
      "commit": true,
      "tag": true
    },
    "github": {
      "release": true
    },
    "hooks": {
        "after:bump": "auto-changelog -p"
      }, 
    "plugins": {
        "@release-it/conventional-changelog": {
          "preset": "angular",
          "infile": "CHANGELOG.md"
        }
      }
  }

